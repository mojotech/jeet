.resources
  padding (xl-padding-block - 17) 0 (xl-padding-block - 31) 0
  +below(small-snap)
    padding (tiny-padding-block + med-padding-block - 17) 0 (xs-padding-block + med-padding-block - 17) 0
  h3
    margin-top 10px
  .focused-example.cf
    position relative
    border none
    &:before
      content '@extend $cf'
.fancybox
  text-decoration none
  color dark-grey
.third
  margin-top ((large-padding-block - 6) - (large-padding-block / 2))
  padding (large-padding-block / 2) 0
  +below(small-snap)
    padding 0
.getting-started
  +below(small-snap)
    margin-top small-padding-block + tiny-padding-block - 4
  +above(huge-snap)
    shift(1/3, gutter:1)
.focused-example
  &.third.tight
    padding (small-padding-block + 4) 0 (xs-padding-block - 2) 0
  &.getting-started:before
    content 'shift(1/2)'
  &.basic-use:before
    content 'shift(-1/2)'
.basic-use
  +above(huge-snap)
    shift(-1/3, gutter:1)
.tutorial
  size(100%, 200px)
  display block
  background-color green
  +below(med-snap)
    height xl-padding-block
  +below(small-snap)
    height section-padding-block
.play
  background-image url('../img/play-icon.svg')
  background-size 30px
  background-repeat no-repeat
  background-position center
.fancybox-close
  background-image url('../img/x.svg')
  background-size 15px
  top 0
  right -40px
  background-color white
  background-repeat no-repeat
  background-position center
  border-radius 2px
  +below(900px)
    top -40px
    right 0px
